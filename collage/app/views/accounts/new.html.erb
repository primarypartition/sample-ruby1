<div class="row">
  <div class="col s12">
    <h3 class="center-align">Login!</h3>
  </div>

  <div class="col s12">
    
    <%= form_with(scope: :account, url: login_path, local: true) do |f| %>   
      <div class="row">
        <div class="input-field col s12">
          <%= f.email_field :email %>
          <%= label_tag(:email) %>
        </div>
      </div>
      
      <div class="row">        
        <div class="input-field col s12"> 
          <%= f.password_field :password %>
          <%= label_tag(:password) %>
        </div>        
      </div>     
      
      <div class="row">
        <div class="input-field col s12">
          <%= submit_tag("Login!", class: "waves-effect waves-light btn") %>
        </div>
      </div>     
    <% end %> 
  
  </div>  
</div>

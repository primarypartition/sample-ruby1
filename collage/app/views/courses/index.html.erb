<div class="row">
  <div class="col s12">
    <h3 class="center-align">Courses List</h3>
  </div>
  
  <div class="col s12">  
    <div class="row">    
      <% @courses.each do |course| %>
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title"><%= course.short_name %>: <%= course.name %></span>
            <p><%= course.description %></p>
          </div>
          <div class="card-action">       
            <% if logged_in? && !current_user.courses.exists?(course.id) %>            
              <%= link_to 'Enroll', course_enroll_path({course_id: course.id}), method: :post %>
            <% end %>
            
            <%= link_to 'Info', course_path(course) %>            
          </div>
        </div>
      </div>
      <%end %>  
    </div>  
  </div>  
</div>

<% if obj.errors.any? %>
<div class="container">  
  <div class="row red">  
    <div class="col s12">    
      <p class="white-text">
        The following errors prevented the 
        <%= obj.class.name.downcase %> from being saved
      </p>
      
      <ul class="white-text">
        <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>    
  </div>
</div>
<% end %>
